<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.zxr.medicalaid.widget.CircleImageView
            android:layout_width="@dimen/image_size_large"
            android:layout_height="@dimen/image_size_large"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_normal"
            android:src="@drawable/welcome_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_large"
            android:text="一直生病的兔子"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_large" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:background="@color/white">

        <TextView
            android:id="@+id/time_wenzhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="0"
            android:textAppearance="@style/MyDisplay2"
            android:textColor="@color/primary_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/time_jiuzhen"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_jiuzhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAppearance="@style/MyDisplay2"
            android:textColor="@color/primary_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/time_wenzhen"
            app:layout_constraintLeft_toRightOf="@+id/time_wenzhen"
            app:layout_constraintRight_toLeftOf="@+id/page_num" />

        <TextView
            android:id="@+id/page_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textAppearance="@style/MyDisplay2"
            android:textColor="@color/primary_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/time_wenzhen"
            app:layout_constraintLeft_toRightOf="@+id/time_jiuzhen"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView

            android:id="@+id/time_wenzhen4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:text="问诊次数"
            android:textAppearance="@style/MySubhead"
            android:textColor="@color/secondary_text"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/time_wenzhen"
            app:layout_constraintRight_toRightOf="@+id/time_wenzhen"
            app:layout_constraintTop_toBottomOf="@+id/time_wenzhen" />

        <TextView
            android:id="@+id/time_wenzhen5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊次数"
            android:textAppearance="@style/MySubhead"
            android:textColor="@color/secondary_text"
            android:textStyle="normal"
            app:layout_constraintBaseline_toBaselineOf="@+id/time_wenzhen4"
            app:layout_constraintLeft_toLeftOf="@+id/time_jiuzhen"
            app:layout_constraintRight_toRightOf="@+id/time_jiuzhen" />

        <TextView
            android:id="@+id/time_wenzhen7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="药方张数"
            android:textAppearance="@style/MySubhead"
            android:textColor="@color/secondary_text"
            android:textStyle="normal"
            app:layout_constraintBaseline_toBaselineOf="@+id/time_wenzhen4"
            app:layout_constraintLeft_toLeftOf="@+id/page_num"
            app:layout_constraintRight_toRightOf="@+id/page_num"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:src="@drawable/more"
            app:layout_constraintBottom_toBottomOf="@+id/time_wenzhen7"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/page_num" />
    </android.support.constraint.ConstraintLayout>

    
    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="@dimen/spacing_normal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            app:layout_constraintDimensionRatio="3:2"
            android:src="@drawable/prescribe_record_bt"
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/presribe_bt"
            app:layout_constraintRight_toLeftOf="@+id/treat_record_bt"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />
        <ImageView
            app:layout_constraintDimensionRatio="3:2"
            android:src="@drawable/caution_bt"
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toLeftOf="@+id/about_us_bt"
            android:id="@+id/caution_bt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/presribe_bt" />
        <ImageView
            app:layout_constraintDimensionRatio="3:2"
            android:src="@drawable/about_us_bt"
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/caution_bt"
            android:id="@+id/about_us_bt"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/treat_record_bt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />
        <ImageView
            app:layout_constraintDimensionRatio="3:2"
            android:src="@drawable/treat_record_bt"
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/presribe_bt"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/treat_record_bt"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

    </android.support.constraint.ConstraintLayout>
    
</LinearLayout>